{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../",
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "jsx": "react-jsx",
    "lib": ["es6", "dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "strict": false
  },
  "include": ["src/**/*"],
  "references": [
    { "path": "../packages/ble" },
    { "path": "../packages/protocol" }
  ],
  "exclude": ["node_modules", "dist"]
}
